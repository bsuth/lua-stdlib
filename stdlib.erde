-- -----------------------------------------------------------------------------
-- Math
-- -----------------------------------------------------------------------------

function math.clamp(x, min, max) {
  return math.min(math.max(x, min), max)
}

function math.round(x) {
  if x < 0 {
    return math.ceil(x - 0.5)
  } else {
    return math.floor(x + 0.5)
  }
}

function math.sign(x) {
  if x < 0 {
    return -1
  } elseif x > 0 {
    return 1
  } else {
    return 0
  }
}

